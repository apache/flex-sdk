<!--- The Spark skin class for the separator of the MX DataGrid component. 

      @see mx.controls.DataGrid
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    width="2" height="10" mouseEnabled="false" mouseChildren="false">    
    
    <fx:Script>
        /**
         * @private
         */
        override protected function initializationComplete():void
        {
            useChromeColor = true;
            super.initializationComplete();
        }
    </fx:Script>
    
    <!-- highlight -->
    <s:Rect top="0" bottom="1" left="0" width="1">
        <s:fill>
            <s:SolidColor color="0xFFFFFF" alpha="0.35" />
        </s:fill>
    </s:Rect>
    <!-- border -->
    <s:Rect top="0" right="0" bottom="0" width="1">
        <s:fill>
            <s:SolidColor color="0x696969" />
        </s:fill>
    </s:Rect>
</s:SparkSkin>