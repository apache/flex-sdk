<SparkSkin xmlns="http://ns.adobe.com/mxml/2009"
      alpha.disabled="0.5" minHeight="24" minWidth="12">

    <Metadata>
    	[HostComponent("mx.components.FxSpinner")]
    </Metadata> 
    
    <Script>
        /* Define the skin elements that should not be colorized. 
           For spinner, the skin itself is colorized but the individual parts are not. */
        static private const exclusions:Array = ["decrementButton", "incrementButton"];
        override public function get colorizeExclusions():Array {return exclusions;}
    </Script>
    
    <states>
    	<State name="normal" />
    	<State name="disabled" />
    </states>
    
    <FxButton id="incrementButton" left="0" right="0" top="0" height="50%" 
            skinClass="mx.skins.spark.FxSpinnerIncrButtonSkin" /> 
    <FxButton id="decrementButton" left="0" right="0" bottom="0" height="50%"  
            skinClass="mx.skins.spark.FxSpinnerDecrButtonSkin" />

</SparkSkin>
