<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx">

<mx:TabNavigator width="200" height="200">
	<s:NavigatorContent label="Tab 1">
		<s:layout>
			<s:BasicLayout />
		</s:layout>
		<s:Rect width="20" height="20" top="0" left="0" >
		    <s:stroke>
		        <s:SolidColorStroke weight="1" color="0x880000" />
		    </s:stroke>
		    <s:fill>
		        <s:SolidColor alpha="1" color="0x008800" />
		    </s:fill>
		</s:Rect>
		<s:Button label="Button" top="0" right="0" />
		<s:CheckBox label="CheckBox" bottom="0" left="0" />
		<s:TextInput text="TextInput" bottom="0" right="0" width="60" />
	</s:NavigatorContent>
	<s:NavigatorContent label="Tab 2">
		<s:layout>
			<s:VerticalLayout />
		</s:layout>
		<s:Rect width="20" height="20" top="0" left="0" >
		    <s:stroke>
		        <s:SolidColorStroke weight="1" color="0x880000" />
		    </s:stroke>
		    <s:fill>
		        <s:SolidColor alpha="1" color="0x008800" />
		    </s:fill>
		</s:Rect>
		<s:Button label="Button" top="0" right="0" />
		<s:CheckBox label="CheckBox" bottom="0" left="0" />
		<s:TextInput text="TextInput" bottom="0" right="0" width="60" />
	</s:NavigatorContent>
	<s:NavigatorContent label="Tab 3">
		<s:Scroller width="100%" height="100%">
			<s:Group>
				<s:layout>
					<s:HorizontalLayout />
				</s:layout>

				<s:Rect width="20" height="20" top="0" left="0" >
				    <s:stroke>
				        <s:SolidColorStroke weight="1" color="0x880000" />
				    </s:stroke>
				    <s:fill>
				        <s:SolidColor alpha="1" color="0x008800" />
				    </s:fill>
				</s:Rect>
				<s:Button label="Button" top="0" right="0" />
				<s:CheckBox label="CheckBox" bottom="0" left="0" />
				<s:TextInput text="TextInput" bottom="0" right="0" width="60" />
			</s:Group>
		</s:Scroller>
	</s:NavigatorContent>
</mx:TabNavigator>
</s:Application>