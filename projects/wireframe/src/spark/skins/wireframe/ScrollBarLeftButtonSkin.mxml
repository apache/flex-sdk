<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
    	[HostComponent("spark.components.Button")]
    </fx:Metadata> 
    
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

    <!-- background -->
    <s:Rect left="0" right="0" minWidth="17" top="0" bottom="0" minHeight="14">
        <s:stroke>
            <s:SolidColorStroke color="0x5380D0" />
        </s:stroke>
        <s:fill>
            <s:SolidColor color="0xFFFFFF" color.over="0xEBF4FF" color.down="0xDEEBFF" />
        </s:fill>
    </s:Rect>

	<!-- shadow (down state only) -->
	<s:Rect left="1" top="1" right="1" bottom="1" includeIn="down">
		<s:stroke>
			<s:LinearGradientStroke rotation="90">
				<s:GradientEntry color="0x5380D0" alpha="0.25" />
				<s:GradientEntry color="0x5380D0" alpha="0" />
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>

    <!-- arrow -->
    <s:Path data="M 5 7.5 L 12 11 L 12 3.5 L 5 7.5">
        <s:fill>
            <s:SolidColor color="0x4E6290" />
        </s:fill>
    </s:Path>

</s:Skin>
