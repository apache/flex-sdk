<!--- The default wireframe skin class for the Spark HSliderTrack component. 
        Skin classes in the wireframe package are useful for using as a simple base for a custom skin.
        
       @see spark.components.HSlider

      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
    </fx:Metadata> 
    
    <s:states>
        <s:State name="up" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="disabled" />
    </s:states>

    <s:Rect left="0" right="0" top="3" bottom="2" 
          radiusX="3" radiusY="3" >
        <s:stroke>
            <s:SolidColorStroke color="#A9A9A9" />
        </s:stroke>
        <s:fill>
            <s:SolidColor color="#D0D0D0" />
        </s:fill>
    </s:Rect>

    <!-- shadow rect -->
    <s:Rect left="0" right="0" top="3" height="2" radiusX="3">
        <s:fill>
            <s:LinearGradient rotation="90">
                <s:GradientEntry color="#000000" alpha="0.07" ratio="0" />
                <s:GradientEntry color="#000000" alpha="0.1" ratio="1" />
            </s:LinearGradient>
        </s:fill>
    </s:Rect>
    
</s:Skin>
