	<testCases>
	
		<TestCase testID="Key_selection" description="HorizontalList dataProvider item is set to false test." keywords="[enabled, HorizontalList]">
			<setup>
			<ResetComponent target="hl" className="mx.controls.HorizontalList" />
			    <RunCode code="addData(0);" />
			    <DispatchKeyEvent key="TAB"  />
				<DispatchKeyEvent key="TAB"  />
				<DispatchKeyEvent key="TAB" waitTarget="hl" waitEvent="focusIn" />
				<DispatchKeyEvent key="DOWN" waitTarget="hl" />
				
			</setup>
			<body>
				<DispatchKeyEvent keys="[DOWN, DOWN, RIGHT, DOWN, DOWN]" waitTarget="hl" waitEvent="change" />
			    <AssertPropertyValue target="hl" propertyName="selectedIndex" value="5" />
			</body>
		</TestCase>
		<TestCase testID="Key_selection1" description="HorizontalList dataProvider item is set to false and changed to true test." keywords="[enabled, HorizontalList]">
			<setup>
			    <ResetComponent target="hl" className="mx.controls.HorizontalList" />
			    <RunCode code="addData(0);" />
			    <RunCode code="changeDP(0,'true');" />
			    <DispatchKeyEvent key="TAB"  />
				<DispatchKeyEvent key="TAB"  />
				<DispatchKeyEvent key="TAB" waitTarget="hl" waitEvent="focusIn" />
				<DispatchKeyEvent key="DOWN" waitTarget="hl" />
			</setup>
			<body>
				<DispatchKeyEvent keys="[RIGHT, RIGHT, RIGHT, RIGHT, RIGHT,RIGHT, RIGHT, RIGHT, RIGHT, RIGHT]" waitTarget="hl" waitEvent="change" />
				<AssertPropertyValue target="hl" propertyName="selectedIndex" value="10" />
			</body>
		</TestCase>
		
		<TestCase testID="Key_selection_end"  description="HorizontalList end key." keywords="[enabled, HorizontalList]">
			<setup>
				<ResetComponent target="hl" className="mx.controls.HorizontalList" />
			    	<RunCode code="addData(0);" />
				<RunCode code="changeDP(1, 'false');" /> 
				
				<DispatchKeyEvent key="TAB"  />
				<DispatchKeyEvent key="TAB"  />
				<DispatchKeyEvent key="TAB" waitTarget="hl" waitEvent="focusIn" />
				<DispatchKeyEvent key="DOWN" waitTarget="hl"  />
			</setup>
			<body>
				<DispatchKeyEvent key="END" waitTarget="hl" waitEvent="change" />
			    	<AssertPropertyValue target="hl" propertyName="selectedIndex" value="11" />
			</body>
		</TestCase>

	</testCases>
