            <AssertPropertyValue target="canvas2.getChildAt(1)" propertyName="width" value="100" />
            <AssertPropertyValue target="canvas2.getChildAt(1)" propertyName="x" value="25" />
            <AssertPropertyValue target="canvas2.getChildAt(1)" propertyName="y" value="0" />
