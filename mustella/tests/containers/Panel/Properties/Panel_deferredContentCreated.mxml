<UnitTester testDir="containers/Panel/Properties/"  xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*" testSWF="Panel_deferredContentCreated_app.mxml">
	<!-- this set of lines form a template that must be in each unit test -->
	<mx:Script>
	<![CDATA[
	public static function init(o:DisplayObject):void
	{
	}					
	]]>
	</mx:Script>
	<mx:Metadata>
	<![CDATA[
		[Mixin]
	]]>
	</mx:Metadata>	
	<!-- end of set of lines that must be in each unit test -->
	
	<mx:Script>
		<![CDATA[

            import mx.core.FlexGlobals;

		]]>
	</mx:Script>

    <!--
        This doesn't test deferred instantiation. It's just testing that deferredContentCreated
		is correct in very basic cases.
        
        Everything is in MXML, so don't call ResetComponent.
        
        We need a quick pause to wait for the app to finish opening.  Otherwise it launches and
        exits with no results.
    -->

	<testCases>
		<TestCase testID="Panel_properties_deferredContentCreated_test1" description="Check deferredContentCreated for a Panel." keywords="[Panel,deferredContentCreated]">
			<body>
				<Pause timeout="100" />
				<AssertPropertyValue target="panel1" propertyName ="deferredContentCreated" value="true"/>
				<AssertPropertyValue target="panel2" propertyName ="deferredContentCreated" value="false"/>
				<AssertMethodValue method="value = FlexGlobals.topLevelApplication.panel1.numChildren" value="1" />
				<AssertMethodValue method="value = FlexGlobals.topLevelApplication.panel2.numChildren" value="0" />
			</body>
		</TestCase>

		<TestCase testID="Panel_properties_deferredContentCreated_test2" description="auto" keywords="[Panel,deferredContentCreated]">
			<body>
				<Pause timeout="100" />
				<SetProperty target="acc2" propertyName="selectedIndex" value="1" waitEvent="updateComplete" />
				<WaitForEffectsToEnd />
				<AssertPropertyValue target="panel3" propertyName ="deferredContentCreated" value="true"/>
			</body>
		</TestCase>
    </testCases>
</UnitTester>
