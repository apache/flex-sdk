	<testCases>
		<TestCase testID="StageText_TextArea_verifySkin" keywords="[StageText, TextArea, Skin, Styles]" description="Verify that the StageText component is wearing the right skin">
			<setup>
				<RunCode code="application.stage.focus=null" />
				<ResetComponent target="navigator" className="comps.QANavigator" 
								waitEvent="viewChangeComplete" />
				<RunCode code="application.navigator.pushView(views.StylesView)" 
						 waitTarget="navigator" waitEvent="viewChangeComplete" 
						 timeout="7000" />
			</setup>
			<body>
				<AssertStyleValue target="navigator.activeView.svTextArea" 
								  styleName="skinClass" 
								  value="{spark.skins.mobile.StageTextAreaSkin}"/>
			</body>
		</TestCase>
		<TestCase testID="StageText_TextArea_fontFamily_typewriter" keywords="[StageText, TextArea, fontFamily, Styles, typewriter]" description="Verify that the StageText components use the _typewriter font">
