				<ResetComponent target="navigator" className="comps.QANavigator" 
								waitEvent="viewChangeComplete" />
				<RunCode code="application.navigator.pushView(views.StylesView)" 
						 waitTarget="navigator" waitEvent="viewChangeComplete" 
						 timeout="7000" />
			</setup>
			<body>
				<SetStyle target="navigator.activeView.svTextArea" styleName="fontFamily" value="_typewriter"/>				
				<RunCode code="application.navigator.activeView.svTextArea.appendText('hello');" 
						 waitTarget="navigator.activeView.svTextArea" 
						 waitEvent="updateComplete"/>
				<AssertStyleValue target="navigator.activeView.svTextArea" styleName="fontFamily" value="_typewriter"/>
				<CompareBitmap target="navigator.activeView.svTextArea" stageText="true" url="../styles/baselines/TextArea/">
					<ConditionalValue deviceDensity="240" os="android"/>
					<ConditionalValue deviceDensity="320" os="iphone"/>
					<ConditionalValue deviceDensity="160" os="qnx"/>
				</CompareBitmap>
			</body>
		</TestCase>
