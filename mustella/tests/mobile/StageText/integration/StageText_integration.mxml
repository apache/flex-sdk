<UnitTester
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns="*"
    testDir="mobile/StageText/integration/"
    testSWF="StageText.mxml" xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Script><![CDATA[ public static function init(o:DisplayObject):void { } ]]></fx:Script>
    <fx:Metadata><![CDATA[ [Mixin] ]]></fx:Metadata>

    <fx:Script>
        <![CDATA[
            import views.*;
			import mx.core.FlexGlobals;
        ]]>
    </fx:Script>

    <testCases>
		<TestCase testID="StageText_moveFocus_click" keywords="[StageText, Events, focusIn]" description="While the softkeyboard is up,test pressing another text control (should move focus to that control) ">
			<setup>	
				<RunCode code="application.stage.focus=null" />
				<ResetComponent target="navigator" className="comps.QANavigator" waitEvent="viewChangeComplete" />
				<RunCode code="application.navigator.pushView(views.EmailView)" waitTarget="navigator" waitEvent="viewChangeComplete" timeout="6000" />				
			</setup>
			<body>
				<DispatchMouseEvent type="rollOver"  target="navigator.activeView.cc" localX="5" localY="5"  waitEvent="rollOver"/>
				<DispatchMouseEvent type="mouseOver" target="navigator.activeView.cc" localX="5" localY="5"  waitEvent="mouseOver"/>
				<DispatchMouseClickEvent target="navigator.activeView.cc" localX="5" localY="5" waitEvent="softKeyboardActivate"/>
				<DispatchMouseClickEvent target="navigator.activeView.subject" localX="5" localY="5" waitEvent="focusIn"/>
				<DispatchMouseClickEvent target="navigator.activeView.homeBtn" localX="5" localY="5" waitEvent="softKeyboardDeactivate" waitTarget="navigator.activeView.subject"/>
				<Pause timeout="100"/>
				<AssertPropertyValue target="navigator.activeView" propertyName="title" value="StageText"/>
			</body>
		</TestCase>		

	</testCases>
</UnitTester>
