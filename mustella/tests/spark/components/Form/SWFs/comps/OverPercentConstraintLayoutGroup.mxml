<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" visible="false" >
		 <!-- Group with Constraint Columns whose total percentage widths are less than 100% -->
		 
		 <s:layout>
		 <s:ConstraintLayout>
			<s:constraintColumns>
				<s:ConstraintColumn id="col1" width="20%"/>
				<s:ConstraintColumn id="col2" width="30%"/>
				<s:ConstraintColumn id="col3" width="25%"/>
				<s:ConstraintColumn id="col4" width="40%"/>
			</s:constraintColumns>
			<s:constraintRows>
				<s:ConstraintRow id="row1" height="20%"/>
				<s:ConstraintRow id="row2" height="25%"/>
				<s:ConstraintRow id="row3" height="15%"/>
				<s:ConstraintRow id="row4" height="30%"/>
				<s:ConstraintRow id="row5" height="35%"/>
			</s:constraintRows>
		</s:ConstraintLayout>
	</s:layout>
	<s:Rect top="0" bottom="0" left="0" right="0">
		<s:fill>
			<s:SolidColor color="red"/>
		</s:fill>
	</s:Rect> 
	<s:Button id="btn1" top="row1:0" label="OverPercent" />
	<s:Button id="btn2" top="row2:0" left="col2:0" label="btn2"/>
	<s:TextInput id="ti" top="row3:0" left="col3:0" />
	<s:ComboBox id="cb" top="row5:0" left="col4:0"> 
		<s:dataProvider>
			<mx:ArrayList>
				<fx:String>Red</fx:String>
				<fx:String>Orange</fx:String>
				<fx:String>Yellow</fx:String>
				<fx:String>Blue</fx:String>
				<fx:String>Green</fx:String>
			</mx:ArrayList>
		</s:dataProvider>
	</s:ComboBox>
</s:Group>
