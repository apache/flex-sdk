    <fx:Declarations>
        <!-- Waltham Endpoints -->
        <s:DynamicStreamingVideoSource id="streamingRTMPVid150" host="{rtmpVidHost}">
            <s:DynamicStreamingVideoItem streamName="{rtmpStream150}"/>
