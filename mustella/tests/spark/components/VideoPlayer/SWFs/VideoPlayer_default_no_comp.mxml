        <s:DynamicStreamingVideoSource id="streamingRTMPVid1000" host="{rtmpVidHost}">
            <s:DynamicStreamingVideoItem streamName="{rtmpStream1000}"/>
        </s:DynamicStreamingVideoSource>
        <s:DynamicStreamingVideoSource id="streamingRTMPVid1500" host="{rtmpVidHost}">
            <s:DynamicStreamingVideoItem streamName="{rtmpStream1500}"/>
        </s:DynamicStreamingVideoSource>
        
        <!-- SF Endpoints -->
	<s:DynamicStreamingVideoSource id="streamingVid" host="rtmp://10.59.8.148/vod/">
