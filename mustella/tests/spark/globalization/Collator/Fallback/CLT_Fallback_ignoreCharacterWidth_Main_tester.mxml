<UnitTester testDir="spark/globalization/Collator/Fallback/"  
			xmlns:mx="http://www.adobe.com/2006/mxml" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns="*" 
			testSWF="CLT_Fallback_ignoreCharacterWidth_Main.mxml">

    <mx:Script>
    <![CDATA[
		import assets.CollatorTestConstants;
		
		public static function init(o:DisplayObject):void
        {
 
        }
    ]]>
    </mx:Script>

    <mx:Metadata>
    <![CDATA[
        [Mixin]
    ]]>
    </mx:Metadata>
	

<testCases>
	<TestCase testID="CLT_Fallback_ignoreCharacterWidth_SortingCollator_in_scipt_test1" description="verify the default value of ignoreCharacterWidth property" keywords="[SortingCollator, ignoreCharacterWidth]">
		<body>
			<AssertPropertyValue propertyName="ignoreCharacterWidth" valueExpression="value=false" target="cltSort"/>
		</body>
	</TestCase>
	
	<TestCase testID="CLT_Fallback_ignoreCharacterWidth_MatchingCollator_in_declaration_test2" description="verify the default value of ignoreCharacterWidth property" keywords="[MatchingCollator, ignoreCharacterWidth]">
		<body>
			<AssertPropertyValue propertyName="ignoreCharacterWidth" valueExpression="value=false" target="cltMatch_inline"/>
		</body>
	</TestCase>
	
	<TestCase testID="CLT_Fallback_ignoreCharacterWidth_MatchingCollator_in_scipt_test3" description="verify the ignoreCharacterWidth can be set correctly, the return value of getter is same as the set value" keywords="[MatchingCollator, ignoreCharacterWidth]">
		<body>
			<SetProperty propertyName="ignoreCharacterWidth" valueExpression="value=false" target="cltMatch" waitEvent="change"/>
			<AssertPropertyValue propertyName="ignoreCharacterWidth" valueExpression="value=false" target="cltMatch"/>
			<AssertPropertyValue propertyName="lastOperationStatus" value="noError" target="cltMatch"/>
		</body>
	</TestCase>
	
	<TestCase testID="CLT_Fallback_ignoreCharacterWidth_SortingCollator_in_declaration_test4" description="verify the ignoreCharacterWidth can be set correctly, the return value of getter is same as the set value" keywords="[SortingCollator, ignoreCharacterWidth]">
		<body>
			<AssertPropertyValue propertyName="ignoreCharacterWidth" valueExpression="value=true" target="cltSort_inline"/>
			<AssertPropertyValue propertyName="lastOperationStatus" value="noError" target="cltSort_inline"/>
		</body>
	</TestCase>
	
</testCases>
</UnitTester>
