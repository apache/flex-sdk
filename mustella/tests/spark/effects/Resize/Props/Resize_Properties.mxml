		<TestCase testID="Resize_Explicit"  keywords="[Resize]" description="Test resize against a target with explicit height.">
			<setup>
				<RunCode code="application.uiComponent = new ResizeButton();" />
				<ResetComponent target="testPanel" className="Containers.TrixSparkPanel2" waitEvent="updateComplete" waitTarget="testPanel" />
				<RunCode code="application.testPanel.addElement(application.uiComponent)" waitEvent="updateComplete" waitTarget="testPanel.skin.contentGroup" />
			</setup>
			<body>
				<RunCode code="application.uiComponent.currentState = 's2';" waitTarget="uiComponent.res" waitEvent="effectEnd" />
				<Pause timeout="{timeout}"/>
				<AssertPropertyValue target="uiComponent.button" propertyName="width" value="63"/>
				<AssertPropertyValue target="uiComponent.button" propertyName="height" value="21"/>
			</body>
		</TestCase>

