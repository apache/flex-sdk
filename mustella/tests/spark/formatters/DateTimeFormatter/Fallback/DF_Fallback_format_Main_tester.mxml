    <mx:Script>
    <![CDATA[
		import assets.DFConstants;
		
		import flash.globalization.DateTimeFormatter;
		
		import mx.core.mx_internal;
		use namespace mx_internal;
		
		private var date1:Date = new Date(2000, 0, 1);
		private var date2:Date = new Date(65, 2, 6, 9, 42, 16, 0);
		private var date3:Date = new Date(30000000, 11, 31, 23, 59, 59, 935);
		private var date4:Date = new Date(0);
		private var date5:Date = new Date('Mon Jul 21 1969 3:16 PM');
		private var date6:Date = new Date(1, 1, 1, 1, 1, 1, 1);
		private var date7:Date = new Date('2:57 PM');
		private var date8:Date = new Date('Fri Nov 28 17:34:21 UTC-0500 2008');
			
		private var dtfGSLib:DateTimeFormatter = new DateTimeFormatter('en');
		
		public static function init(o:DisplayObject):void
        {

        }
		
		public function getExpectedValue(obj:*, dateStyle:String, timeStyle:String, date:Date):String
		{
			var expected:String = 'expect';
			//when flash.globalization supported, compare actual result with GSLib result
			 if(obj.enforceFallback)
			{
				if(dateStyle =='long' && timeStyle == 'long')
					dtfGSLib.setDateTimePattern('EEEE, MMMM d, yyyy h:mm:ss a');
				
				if(dateStyle == 'short' && timeStyle == 'medium')
					dtfGSLib.setDateTimePattern('M/d/yyyy h:mm:ss a');
				
				if(dateStyle == 'medium' && timeStyle == 'none')
					dtfGSLib.setDateTimePattern('EEEE, MMMM d, yyyy');
				
				if(dateStyle=='none' && timeStyle == 'short')
					dtfGSLib.setDateTimePattern('h:mm a'); 
				
				return dtfGSLib.format(date);
			}
			else //when flash.globalization un-supported, compare the actual result with formatted string using US timezone
			{
				if(dateStyle == 'long' && timeStyle == 'long')
				{
					
					switch(date)
					{
						case date1:
							expected = 'Saturday, January 1, 2000 12:00:00 AM'; break;
						case date2:
							expected = 'Saturday, March 6, 1965 9:42:16 AM'; break;
						case date3:
							expected = 'Sunday, December 31, 30000000 11:59:59 PM'; break;
						case date4:
							expected = 'Wednesday, December 31, 1969 4:00:00 PM'; break;
						case date5:
							expected = 'Monday, July 21, 1969 3:16:00 PM'; break;
						case date6:
							expected = 'Friday, February 1, 1901 1:01:01 AM'; break;
						case date7:
							expected = ''; break;
						case date8:
							expected = 'Friday, November 28, 2008 2:34:21 PM'; break;
					}
				}
				
				if(dateStyle == 'short' && timeStyle == 'medium')
				{
					switch(date)
					{
						case date1:
							expected = '1/1/2000 12:00:00 AM'; break;
						case date2:
							expected = '3/6/1965 9:42:16 AM'; break;
						case date3:
							expected = '12/31/30000000 11:59:59 PM'; break;
						case date4:
							expected = '12/31/1969 4:00:00 PM'; break;
						case date5:
							expected = '7/21/1969 3:16:00 PM'; break;
						case date6:
							expected = '2/1/1901 1:01:01 AM'; break;
						case date7:
							expected = ''; break;
						case date8:
							expected = '11/28/2008 2:34:21 PM'; break;
					}
				}
				
				if(dateStyle == 'medium' && timeStyle == 'none')
				{
					switch(date)
					{
						case date1:
							expected = 'Saturday, January 1, 2000'; break;
						case date2:
							expected = 'Saturday, March 6, 1965'; break;
						case date3:
							expected = 'Sunday, December 31, 30000000'; break;
						case date4:
							expected = 'Wednesday, December 31, 1969'; break;
						case date5:
							expected = 'Monday, July 21, 1969'; break;
						case date6:
							expected = 'Friday, February 1, 1901'; break;
						case date7:
							expected = ''; break;
						case date8:
							expected = 'Friday, November 28, 2008'; break;
					}
				}
				
				if(dateStyle == 'none' && timeStyle == 'short')
				{
					switch(date)
					{
						case date1:
							expected = '12:00 AM'; break;
						case date2:
							expected = '9:42 AM'; break;
						case date3:
							expected = '11:59 PM'; break;
						case date4:
							expected = '4:00 PM'; break;
						case date5:
							expected = '3:16 PM'; break;
						case date6:
							expected = '1:01 AM'; break;
						case date7:
							expected = ''; break;
						case date8:
							expected = '2:34 PM'; break;
					}
				}
				return expected;
			} 
			
			
		}
    ]]>
    </mx:Script>

    <mx:Metadata>
    <![CDATA[
        [Mixin]
    ]]>
    </mx:Metadata>
