<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600">
	
	<fx:Script>
		<![CDATA[
			import spark.formatters.NumberFormatter;
			
			public var nfScript:spark.formatters.NumberFormatter = new spark.formatters.NumberFormatter();
			
			public var nfNoLocaleScript: spark.formatters.NumberFormatter = new spark.formatters.NumberFormatter();
			
			public function setNFGroupingPattern():void
			{
				this.addStyleClient(nfScript);
				nfScript.setStyle("locale","en-US");
				nfScript.groupingPattern = "3;*";
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->	
		<s:NumberFormatter id="nfDefault" locale="en-US" />	
		
		<s:NumberFormatter id="nfNoLocaleInline" />
		
		<s:NumberFormatter id="nfPositive1" locale="en-US" />
		<s:NumberFormatter id="nfPositive2" locale="en-US" />
		<s:NumberFormatter id="nfPositive3" locale="en-US" />
		
		<s:NumberFormatter id="nfInline1" locale="en-US" groupingPattern="3;*"/>	
		<s:NumberFormatter id="nfInline2" locale="en-US" groupingPattern="3;2;*"/>	
		<s:NumberFormatter id="nfInline3" locale="en-US" groupingPattern="3"/>	
	
		<s:NumberFormatter id="nfFormat1" locale="en-US" useGrouping="true" groupingSeparator="," />
		<s:NumberFormatter id="nfFormat2" locale="en-US" useGrouping="true" groupingSeparator="," />
		<s:NumberFormatter id="nfFormat3" locale="en-US" useGrouping="true" groupingSeparator="," />
		
		<s:NumberFormatter id="nfNegative1" locale="en-US" />
		<s:NumberFormatter id="nfNegative2" locale="en-US" />
		
		<s:NumberFormatter id="nfBinding" locale="en-US" useGrouping="true" groupingSeparator="," />
		<s:NumberFormatter id="nfBLocale1"/>
		<s:NumberFormatter id="nfBLocale2"/>
		
		<s:NumberFormatter id="nfInline_ChangeLocale" locale="zh-CN" groupingPattern="3;*"/>
		
	</fx:Declarations> 
	<s:Label id="nfLabel" text="{nfBinding.groupingPattern}" />
	
	<s:Label id="nfLa" text="{nfBLocale1.groupingPattern}"/>
	<s:Label id="nfLb" text="{nfBLocale2.groupingPattern}"/>
	
</s:Application>