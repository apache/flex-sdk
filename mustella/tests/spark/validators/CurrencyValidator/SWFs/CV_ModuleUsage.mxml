<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:assets="assets.*"
			   minWidth="955" minHeight="600">
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		@namespace assets "assets.*";
		/* 		s|DateTimeFormatter {
		locale:'fr-FR'; 
		} */
		
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			
			import mx.controls.Alert;
			import mx.events.ModuleEvent;
			//public static const modulURL:String = "assets/NF_FlexModule.swf";
			
			public function loadCVModule(url:String):void
			{
				CVModule.url = url;
				CVModule.loadModule();
			}
			
			public function unloadCVModule():void
			{
				CVModule.unloadModule();
			}
			
			public function handleModuleLoaded(e:ModuleEvent):void
			{
				e.currentTarget.removeEventListener(ModuleEvent.READY, handleModuleLoaded);
			}
			
			public function removeModuleLoaded(e:ModuleEvent):void
			{
				e.currentTarget.removeEventListener(ModuleEvent.UNLOAD, removeModuleLoaded);
			}
			
			private function errorModuleHandler(e:ModuleEvent):void
			{
				e.currentTarget.removeEventListener(ModuleEvent.ERROR,errorModuleHandler);
				Alert.show(e.errorText);				
			}
			
			public function addModuleLoaderListener():void
			{
				
				CVModule.addEventListener(ModuleEvent.READY,handleModuleLoaded);
				CVModule.addEventListener(ModuleEvent.ERROR,errorModuleHandler);
				CVModule.addEventListener(ModuleEvent.UNLOAD,removeModuleLoaded);
				
			}
			/*
			<SetProperty target="CVModule.child.cv" propertyName="source" valueExpression="value=application.nvSourceTI"/>
			<SetProperty target="CVModule.child.cv" propertyName="property" value="text"/>
			<SetProperty target="CVModule.child.cv" propertyName="required" value="false"/>
			*/
			
		]]>
	</fx:Script>
	<s:VGroup>
		<s:TextInput id="nvSourceTI"/>
		
		<s:Button id="btLoad" label="load module" click="loadCVModule('assets/CV_FlexModule.swf')"/>
		<s:Button id="btUnload" label="unload module" click="unloadCVModule()"/>
		<s:Button id="uiBT" label="uiBT" />
		<mx:ModuleLoader id="CVModule"/>
		
		
	</s:VGroup>
	
	
	
</s:Application>
