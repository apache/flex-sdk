<s:MXDataGridItemRenderer 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    height="50">
    
    <fx:Script>
        <![CDATA[
            
            import mx.controls.dataGridClasses.*;
            import mx.controls.listClasses.*;
            
            /**
             * Override the set data method so the TextInput can receive the data
             * from any column (given a dataField)
             */
            override public function set data(value:Object):void {      
                if(value != null)  {
                    super.data = value;
                    
                    var dataField:String = DataGridListData(listData).dataField;
                    
                    lbl1.text = value[dataField];
                    lbl2.text = value[dataField];
                    lbl3.text = value[dataField];
                }   
            } 
        ]]>
    </fx:Script>
    
    <s:states>
        <s:State name="normal" />
        <s:State name="hovered" />
        <s:State name="selected" />
    </s:states>
    
    <s:HGroup left="0" right="0" verticalCenter="0">
        <s:Label id="lbl1" color="0xFF0000" />
        <s:Label id="lbl2" color="0x00FF00" />
        <s:Label id="lbl3" color="0x0000FF" />
    </s:HGroup>
    
</s:MXDataGridItemRenderer>
