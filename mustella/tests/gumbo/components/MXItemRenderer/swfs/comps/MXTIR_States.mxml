<s:MXTreeItemRenderer 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
     autoDrawBackground="false">
    
    <fx:Script>
        <![CDATA[
            import mx.controls.treeClasses.*;
            
            override public function set data(value:Object):void {      
                if(value != null)  {
                    super.data = value;
                    
                    edt.text = TreeListData(listData).label;
                }   
            } 
            
            /**
             * Update the value
             */
            public function get updatedValue():* {
                return edt.text;
            }
            
        ]]>
    </fx:Script>
    
    <s:states>
        <s:State name="normal" />
        <s:State name="hovered" />
        <s:State name="selected" />
    </s:states>
    
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle" />
    </s:layout>
    
    <s:Rect id="indentationSpacer" width="{treeListData.indent}" height="22" alpha="0">
        <s:fill>
            <s:SolidColor color="0xFFFFFF" />
        </s:fill>
    </s:Rect>
    
    <s:Group id="disclosureGroup">
        <s:BitmapImage source="{treeListData.disclosureIcon}" width="16" height="16" visible="{treeListData.hasChildren}" />
    </s:Group>
    
    <s:Group>
        <s:Rect width="100%" height="100%">
            <s:fill>
                <s:SolidColor color="red" color.hovered="green" color.selected="blue" />
            </s:fill>
        </s:Rect>
        
        <s:BitmapImage source="{treeListData.icon}" width="16" height="16" top="1" left="1" right="1" bottom="1" />
    </s:Group>
    
    <s:TextInput id="edt" color.hovered="red" color="green" color.selected="blue" width="100%"  height="21"/>
    
    <s:Button width="16" height="16" alpha.hovered="0.50" />
    
</s:MXTreeItemRenderer>
