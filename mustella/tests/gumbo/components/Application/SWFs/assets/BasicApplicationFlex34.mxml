<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" >
	
<mx:Script>
<![CDATA[

    import mx.core.Application;

    private var testString:String = "hotdog";

    /**
    * Get the application.
    * Get the test string to be sure we really 
    * have this application.
    **/
    public function checkApplication():Boolean{
        var ret:Boolean = false;
        var app:Object;
        
        //trace("1");
        
        try{
             // This part should pass.
             app = Application.application;
             //trace("2");
             if(app.testString == "hotdog"){
                //trace("3");                
                try{
                    //trace("4");
                    app = app.parentApplication;
                    
                    // This part should cause an exception.
                    if(app.testString == "hamburger"){}
                }catch(e:Error){
                    //trace("5");
                    ret = true;            
                }
             }
        }catch(e:Error){}
        
        return ret;
    }

]]>
</mx:Script>

</mx:Application>
