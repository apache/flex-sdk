        <arg class="java.lang.String" value="file:test-resources/org/apache/batik/test/svg/HTMLReport.xsl" />
            <!-- Ouput Directory -->
        <arg class="java.lang.String" value="html" />
            <!-- Output file name -->
        <arg class="java.lang.String" value="regardReport.html" />
        </arg>
    </testReportProcessor>

